#!/bin/bash

# Get the directory where the App is located (project directory)
APP_DIR="$(cd "$(dirname "$0")/../.." && pwd)"
PROJECT_DIR="$APP_DIR"

# Open Terminal and run the install script
osascript <<EOF
tell application "Terminal"
    activate
    do script "cd \"$PROJECT_DIR\" && ./setup"
    set custom title of front window to "AIvsAI Setup"
end tell
EOF
